<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Mageplaza_RewardPoints::reward_points" title="Reward Points" translate="title" sortOrder="40">
                        <resource id="Mageplaza_RewardPoints::earning_rate" title="Earning Rate" translate="title" sortOrder="20"/>
                        <resource id="Mageplaza_RewardPoints::spending_rate" title="Spending Rate" translate="title" sortOrder="30"/>
                        <resource id="Mageplaza_RewardPoints::transaction" title="Transactions" translate="title" sortOrder="40"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mageplaza_RewardPoints::configuration" title="Mageplaza Reward Points" translate="title" sortOrder="50"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
