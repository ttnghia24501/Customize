<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mp_customize>
            <general>
                <enabled>1</enabled>
                <sender>support</sender>
                <sub_template>customize_general_sub_template</sub_template>
                <unsub_template>customize_general_unsub_template</unsub_template>
                <new_customer_template>customize_general_new_customer_template</new_customer_template>
            </general>
            <cron_job>
                <enabled_cron>0</enabled_cron>
                <cron_schedule>0 * * * *</cron_schedule>
            </cron_job>
        </mp_customize>
    </default>
</config>
